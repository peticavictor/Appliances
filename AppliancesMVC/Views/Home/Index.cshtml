@using Appliances.Models

@model IEnumerable<Appliance>

@{
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<div class="text-center">
</div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="card col-md-2">
            <img src='@item.Image' alt="Avatar" style="width:100%">
            <div class="container">
                    <h4><b>@item.Type</b></h4>
                    <div>@item.Brand</div>
                    <div>@item.Model</div>
                    <div>@item.ProducedOn</div>
                    <p>
                        Price - @item.Price lei <a href="/Home/AddToCart/@item.Id" class="btn btn-warning">Add to Cart</a>
                    </p>
                </div>
        </div>
    }
</div>