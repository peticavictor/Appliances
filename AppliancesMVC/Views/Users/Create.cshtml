@model AppliancesMVC.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <input asp-for="Role" class="form-control" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control confirm-psw" onchange="confirmPsw()" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Repeat Pasword</label>
                <input type="password" id="Confirm-Password" onchange="confirmPsw()" class="form-control confirm-psw" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <span class="text-danger d-none" id="passError">Passwords doesn't match.</span>
                <span class="text-success d-none" id="passOk">Passwords matches.</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="save-btn" class="btn btn-primary" disabled />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function confirmPsw() {
        let passwords = document.getElementsByClassName("confirm-psw");

        document.getElementById('passError').classList.replace('d-block', 'd-none')
        document.getElementById('passOk').classList.replace('d-block', 'd-none')

        if (passwords[0].value == passwords[1].value) {
            document.getElementById('passOk').classList.replace('d-none', 'd-block')
            document.getElementById('save-btn').disabled = false
        } else {
            document.getElementById('passError').classList.replace('d-none', 'd-block')
            document.getElementById('save-btn').disabled = true
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
